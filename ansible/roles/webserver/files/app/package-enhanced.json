{
  "name": "mern-app-server",
  "version": "1.0.0",
  "description": "Production-ready MERN application server with monitoring and security",
  "main": "server-enhanced.js",
  "scripts": {
    "start": "node server-enhanced.js",
    "dev": "nodemon server-enhanced.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "docker:build": "docker build -t mern-app-server .",
    "docker:run": "docker run -p 5000:5000 mern-app-server",
    "metrics": "curl http://localhost:5000/metrics",
    "health": "curl http://localhost:5000/health"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "prom-client": "^15.0.0",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "express-rate-limit": "^6.10.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "multer": "^1.4.5-lts.1",
    "express-mongo-sanitize": "^2.2.0",
    "xss-clean": "^0.1.1",
    "hpp": "^0.2.3"
  },
  "devDependencies": {
    "jest": "^29.6.4",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "eslint": "^8.47.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.0.2",
    "eslint-plugin-promise": "^6.1.1",
    "@types/jest": "^29.5.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "mern",
    "express",
    "mongodb",
    "monitoring",
    "prometheus",
    "kubernetes",
    "production"
  ],
  "author": "DevOps Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mern-app-devops.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/mern-app-devops/issues"
  },
  "homepage": "https://github.com/your-org/mern-app-devops#readme"
}
